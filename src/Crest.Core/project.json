{
  "version": "1.0.0-*",

  "buildOptions": {
    "additionalArguments": [ "/additionalfile:../stylecop.json" ],
    "warningsAsErrors": true,
    "xmlDoc": true
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },

    "Release": {
      "buildOptions": {
        "debugType": "none",
        "define": [ "TRACE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "StyleCop.Analyzers": {
      "type": "build",
      "version": "1.0.0"
    }
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  }
}