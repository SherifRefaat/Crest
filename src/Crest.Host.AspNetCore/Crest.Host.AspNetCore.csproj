<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Crest.Host.AspNetCore</AssemblyName>
    <PackageId>Crest.Host.AspNetCore</PackageId>
    <Authors>Samuel Cragg</Authors>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Crest.Host\Crest.Host.csproj" />
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="1.1.2" />
    <!--
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.0" PrivateAssets="All" />
    -->
  </ItemGroup>

</Project>
