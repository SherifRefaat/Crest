{
  "version": "1.0.0-*",

  "buildOptions": {
    "additionalArguments": [ "/additionalfile:../../src/stylecop.json" ],
    "emitEntryPoint": true,
    "warningsAsErrors": true,
    "xmlDoc": true
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },

    "Release": {
      "buildOptions": {
        "debugType": "none",
        "define": [ "TRACE" ],
        "optimize": true,
        "outputName": "crest_open_api"
      }
    }
  },

  "dependencies": {
    "Microsoft.Extensions.CommandLineUtils": "1.0.1",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.1"
    },
    "StyleCop.Analyzers": {
      "type": "build",
      "version": "1.0.0"
    }
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50"
    }
  }
}
